<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"


        tools:context="de.fh_muenster.noobApp.NewLocationActivity">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText28"
            android:hint="Location-Name"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText27"
            android:hint="Beschreibung"
            android:inputType="textMultiLine"
            android:lines="5"
            android:minLines="5"
            android:maxLines="10"
            android:gravity="top|left"
            android:scrollbars="vertical"
            android:background="@drawable/bordershape"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText26"
            android:hint="StraÃŸe"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="88dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bild von Kamera"
            android:id="@+id/button18"
            android:onClick="startKamera"
            android:layout_alignBaseline="@+id/button23"
            android:layout_alignBottom="@+id/button23"
            android:layout_toRightOf="@+id/editText17"
            android:layout_toEndOf="@+id/editText17" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bild hochladen"
            android:id="@+id/button16"
            android:layout_alignTop="@+id/imageView22"
            android:layout_toLeftOf="@+id/button23"
            android:layout_toStartOf="@+id/button23" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner3"
            android:layout_below="@+id/button25"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategorie waehlen"
            android:id="@+id/button25"
            android:layout_below="@+id/editText28"
            android:layout_toRightOf="@+id/editText16"
            android:layout_toEndOf="@+id/editText16" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText17"
            android:hint="Ort"
            android:layout_above="@+id/spinner3"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BILD VOM FILE"
            android:onClick="pickPhoto"
            android:id="@+id/button23"
            android:layout_alignBottom="@+id/editText21"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:id="@+id/imageView22"
            android:background="@drawable/pictureshape"
            android:layout_alignBottom="@+id/editText26"
            android:layout_toLeftOf="@+id/editText17"
            android:layout_toStartOf="@+id/editText17" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText16"
            android:hint="Hausnummer"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText21"
            android:layout_below="@+id/editText16"
            android:layout_toRightOf="@+id/button7"
            android:layout_toLeftOf="@+id/button13"
            android:layout_toStartOf="@+id/button13"
            android:hint="Stadt" />



    </RelativeLayout>

