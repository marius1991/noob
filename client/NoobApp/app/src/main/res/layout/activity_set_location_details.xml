<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"


        tools:context="de.fh_muenster.noobApp.NewLocationActivity">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText28"
            android:hint="Location-Name"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText27"
            android:hint="Beschreibung"
            android:inputType="textMultiLine"
            android:lines="5"
            android:minLines="5"
            android:maxLines="10"
            android:gravity="top|left"
            android:scrollbars="vertical"
            android:background="@drawable/bordershape"
            android:layout_below="@+id/editText28"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="34dp" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kamera"
            android:id="@+id/button18"
            android:onClick="startKamera"
            android:layout_below="@+id/editText27"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bild hochladen"
            android:id="@+id/button16"
            android:layout_alignBottom="@+id/imageView22"
            android:layout_alignLeft="@+id/editText17"
            android:layout_alignStart="@+id/editText17" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner3"
            android:layout_below="@+id/button16"
            android:layout_toLeftOf="@+id/editText2"
            android:layout_toRightOf="@+id/imageView22"
            android:layout_toEndOf="@+id/imageView22" />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText17"
            android:hint="Ort"
            android:layout_above="@+id/spinner3"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explorer"
            android:onClick="pickPhoto"
            android:id="@+id/button23"
            android:layout_below="@+id/editText27"
            android:layout_toRightOf="@+id/button9"
            android:layout_toEndOf="@+id/button9" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:id="@+id/imageView22"
            android:background="@drawable/pictureshape"
            android:layout_below="@+id/editText27"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kategorie auswählen"
        android:id="@+id/button"
        android:layout_below="@+id/spinner3"
        android:layout_toLeftOf="@+id/button18"
        android:layout_toStartOf="@+id/button18" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText20"
        android:hint="Ort"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/editText2"
        android:layout_toLeftOf="@+id/editText2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:hint="Postleitzahl"
        android:layout_below="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText12"
        android:hint="Straße"
        android:layout_below="@+id/editText20"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText20"
        android:layout_alignEnd="@+id/editText20" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText19"
        android:hint="NR"
        android:layout_below="@+id/editText2"
        android:layout_alignRight="@+id/button18"
        android:layout_alignEnd="@+id/button18"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Editieren"
        android:id="@+id/button9"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>

