<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="de.fh_muenster.noobApp.LocationCommentActivity"
    android:clickable="true">


    <EditText
        android:inputType="textMultiLine"
        android:lines="8"
        android:minLines="15"
        android:gravity="top|left"
        android:maxLines="15"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:scrollbars="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="52dp"
        android:id="@+id/editText16"
        android:clickable="false"
        android:hint="@string/activity_location_comment_hint"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:maxLength="1000"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_location_comment_kommentieren"
        android:id="@+id/button12"
        android:onClick="clickFuncCommentOnLocation"
        android:layout_below="@+id/editText16"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp" />

</RelativeLayout>
