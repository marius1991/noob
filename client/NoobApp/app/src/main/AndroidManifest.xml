<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.fh_muenster.noobApp" >
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:name="de.fh_muenster.noobApp.NoobApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.fh_muenster.noobApp.Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.fh_muenster.noobApp.Register"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="de.fh_muenster.noobApp.NewLocation"
            android:label="@string/title_activity_new_location" >
        </activity>
        <activity
            android:name="de.fh_muenster.noobApp.Maintenance"
            android:label="@string/title_activity_maintenance" >
        </activity>
        <activity
            android:name="de.fh_muenster.noobApp.CitySelectionActivity"
            android:label="@string/title_activity_city_selection" >
        </activity>
        <activity
            android:name="de.fh_muenster.noobApp.CategorySelectionActivity"
            android:label="@string/title_activity_category_selection" >
        </activity>
        <activity
            android:name=".LocationListActivity"
            android:label="@string/title_activity_category_list" >
        </activity>
        <activity
            android:name="de.fh_muenster.noobApp.LocationShowActivity"
            android:label="@string/title_activity_location_show" >
        </activity>
    </application>

</manifest>
