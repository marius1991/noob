<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.fh_muenster.noobApp" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
    android:name=".NoobApplication"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:theme="@style/ThemeFullScreen">
    <activity
        android:name="de.fh_muenster.noobApp.LoginActivity"
        android:label="Willkommen Nooby" >

        <!-- Customize your theme here. android:uiOptions="splitActionBarWhenNarrow" -->

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="de.fh_muenster.noobApp.RegisterActivity"
            android:label="Registrierung"
            android:parentActivityName="de.fh_muenster.noobApp.LoginActivity" >
        </activity>
        <activity
            android:name="de.fh_muenster.noobApp.HelpActivity"
            android:label="Help Center"
            android:parentActivityName="de.fh_muenster.noobApp.LoginActivity" >
        </activity>
        <activity
            android:name="de.fh_muenster.noobApp.NewLocationActivity"
            android:label="Neue Location anlegen" >
        </activity>
        <activity
            android:name="de.fh_muenster.noobApp.UserManagementAcitivtiy"
            android:label="Kontoverwaltung" >
        </activity>

        <activity
            android:name="de.fh_muenster.noobApp.CitySelectionActivity"
            android:label="@string/title_activity_city_selection" >
        </activity>
        <activity
            android:name="de.fh_muenster.noobApp.CategorySelectionActivity"
            android:label="@string/title_activity_category_selection" >
        </activity>
        <activity
            android:name=".LocationListActivity"
            android:label="@string/title_activity_category_list" >
        </activity>
        <activity
            android:name=".LocationShowActivity"
            android:label="@string/title_activity_location_show" >
        </activity>
        <activity
            android:name=".LocationSortActivity"
            android:label="@string/title_activity_location_sort" >
        </activity>
        <activity
            android:name=".LocationSearchActivity"
            android:label="@string/title_activity_location_search" >
        </activity>
        <activity
            android:name="de.fh_muenster.noobApp.LocationCommentActivity"
            android:label="@string/title_activity_location_comment" >
        </activity>
    </application>

</manifest>
